<%- include('partials/header') -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
    <div class="mb-3 form-group">
      <label for="postTitle" class="form-label">Title</label>
      <input type="text" class="form-control" name="postTitle" id="postTitle" placeholder="Give the Title of your Post">

      <label for="postBody" class="form-label">Post</label>
      <textarea type="form-control" class="form-control" id="postBody" name="postBody" rows="5" placeholder="Write your post here ..."></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer') -%>